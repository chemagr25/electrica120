---
import { getCollection } from 'astro:content';
import HomePagination from '@components/HomePagination.astro';
import Base from '@layouts/Base.astro';
import Posts from '@layouts/Posts.astro';
import Magazines from '@layouts/Magazines.astro';
import magazines from '../content/magazines/magazines.json';
import Extras from '@layouts/Extras.astro'
const posts = (await getCollection('blog')).sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

const orderedMagazines = magazines.magazines.sort((a, b) => 
  a.title_section.localeCompare(b.title_section, 'es', { sensitivity: 'base' })
)


---

<Base>
  <p class="mb-6 text-4xl font-bold">Blog</p>
  <Posts posts={posts} />
  <HomePagination />
  <p class="mb-6 mt-[60px] text-4xl font-bold"></p>
  <Extras></Extras>
  <p class="my-8 mt-[60px] text-4xl font-bold">Revistas</p>
  <Magazines magazines={orderedMagazines} />

</Base>
