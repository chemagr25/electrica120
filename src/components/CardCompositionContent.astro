---
interface Props {
    title: string;
    imgCover: string;
    description: string;
    author?: string;
    pubDate?: string;
    slug: string;
}

const { title, imgCover, description, author, pubDate, slug } = Astro.props;
---

<article class="card-composition flex flex-col w-full">
    <div>
        <a href={`/content/${slug}`}>
            <div
                class="img-cover  rounded-t-lg w-full h-44"
                style={`background-image: url("${imgCover || '/logo-uni.jpg' }");`}
            >
            </div>
        </a>
  

        <div class=" p-4 pr-3  info rounded-b-xl">
            <a href={`/content/${slug}`} class="text-xl title font-semibold"
                ><p class="`title mt-3">{title}</p></a
            >
        </div>
    </div>
</article>
<style>

   .info {
   }
    .title {
        display: -webkit-box;
        -webkit-line-clamp: 2; /* Número de líneas a mostrar */
        -webkit-box-orient: vertical;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    .description {
          display: -webkit-box;
        -webkit-line-clamp: 3; /* Número de líneas a mostrar */
        -webkit-box-orient: vertical;
        overflow: hidden;
        text-overflow: ellipsis;

    }
    .card-composition {
        font-family: "Inter", sans-serif;
    }
    .img-cover {
    
        background-size: cover; /* Ajusta la imagen al tamaño del div */
        background-position: center; /* Centra la imagen */
        background-repeat: no-repeat; /* Evita que la imagen se repita */
    }
    .author {
        color: #6941c6;
    }

    .prose {
        color: #667085;
    }

    img {
        width: 100%;
        border-radius: 30px;
    }

</style>
